<launch>
  <arg name="world" default="default.world" /> <!-- cave.world, cave_multi.world, fiducial.world, line.world, ... -->
  <arg name="constrained" default="true" /> <!-- enforces speed contrains on each wheel, ... -->

  <!-- loads the stage simulation -->
  <node name="arc_stage" pkg="arc_stage" type="arc_stage" args="$(find arc_stage)/world/$(arg world)">
      <param name="constrainedDiffDrive" value="$(arg constrained)" />
      <remap from="scan" to="base_scan" />
      <remap from="cmd_vel" to="cmd_vel" />
      <remap from="odom" to="odom" />
  </node>
</launch>
